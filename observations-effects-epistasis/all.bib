journal = {Die Naturwissenschaften},
keywords = {Animals,Biology,Cell Physiological Phenomena,Genes,Genetic Code,Humans,Life,Molecular Biology,Philosophy,Proteins,Proteins: genetics,RNA,RNA: genetics},
