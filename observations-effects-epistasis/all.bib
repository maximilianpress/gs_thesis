pmid = {26503808},
title = {{Amino acid positions subject to multiple co-evolutionary constraints can be robustly identified by their eigenvector network centrality scores}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/26503808},
year = {2015}
}
@article{Park2011,
