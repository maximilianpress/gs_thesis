issn = {1553-7358},
journal = {PLoS computational biology},
keywords = {Animals,Anthropology, Physical,Biological Evolution,Epistasis, Genetic,Epistasis, Genetic: physiology,Gene Regulatory Networks,Genotype,Growth and Development,Growth and Development: genetics,Humans,Models, Genetic,Mutation,Mutation: physiology,Phenotype,Physiology, Comparative},
month = oct,
number = {10},
pages = {e1000202},
pmid = {18949026},
publisher = {Public Library of Science},
title = {{An end to endless forms: epistasis, phenotype distribution bias, and nonuniform evolution.}},
