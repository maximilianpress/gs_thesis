pages = {pp.00942.2015},
title = {{Genetic architecture of natural variation in thermal responses of Arabidopsis thaliana}},
url = {http://www.plantphysiol.org/content/early/2015/07/20/pp.15.00942.abstract},
year = {2015}
}
