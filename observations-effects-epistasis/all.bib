publisher = {International Society for Microbial Ecology},
shorttitle = {ISME J},
title = {{Broad host range plasmids can invade an unexpectedly diverse fraction of a soil bacterial community}},
url = {http://dx.doi.org/10.1038/ismej.2014.191},
year = {2014}
}
