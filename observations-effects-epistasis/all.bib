title = {{Genetic enablers underlying the clustered evolutionary origins of C4 photosynthesis in angiosperms.}},
url = {http://mbe.oxfordjournals.org/content/early/2015/01/12/molbev.msu410.abstract},
volume = {32},
year = {2015}
}
