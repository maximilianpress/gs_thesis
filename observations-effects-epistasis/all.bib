issn = {0014-3820},
journal = {Evolution; international journal of organic evolution},
keywords = {Animals,Anura,Anura: growth \& development,Anura: physiology,Biological Evolution,Ecosystem,Female,Larva,Larva: growth \& development,Life Cycle Stages,Ovum,Phenotype,Selection, Genetic,Temperature},
