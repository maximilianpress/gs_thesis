journal = {Evolution; international journal of organic evolution},
keywords = {Animals,Beetles,Beetles: anatomy \& histology,Beetles: genetics,Beetles: growth \& development,Biological Evolution,Female,Larva,Larva: anatomy \& histology,Larva: genetics,Larva: growth \& development,Male,Pupa,Pupa: anatomy \& histology,Pupa: genetics,Pupa: growth \& development,Sex Characteristics,Species Specificity},
