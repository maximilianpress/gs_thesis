keywords = {Animals,Drosophila melanogaster,Drosophila melanogaster: genetics,Drosophila melanogaster: physiology,Environment,Female,Inbreeding,Male,Microsatellite Repeats,Models, Genetic,Ohio,Selection, Genetic,Sexual Behavior, Animal},
