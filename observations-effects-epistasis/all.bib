issn = {1478-3975},
journal = {Physical biology},
language = {en},
month = may,
number = {3},
pages = {035001},
pmid = {25927823},
publisher = {IOP Publishing},
title = {{Universal distribution of mutational effects on protein stability, uncoupling of protein robustness from sequence evolution and distinct evolutionary modes of prokaryotic and eukaryotic proteins.}},
url = {http://iopscience.iop.org/article/10.1088/1478-3975/12/3/035001},
volume = {12},
year = {2015}
}
@article{Faux2005,
