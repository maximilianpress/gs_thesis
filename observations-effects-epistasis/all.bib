keywords = {Circadian clock,Hybrid incompatibility,Microsatellite},
number = {47},
pages = {19363--19367},
title = {{Background-dependent effects of polyglutamine variation in the Arabidopsis thaliana gene ELF3}},
volume = {109},
year = {2012}
}
